// Install dotenv to handle .env file: npm install dotenv
require('dotenv').config();
const axios = require('axios');
const WEATHER_API_KEY = process.env.OPENWEATHER_API_KEY;
const CITY = 'London'; // Hardcode a city for testing

app.get('/api/weather', async (req, res) => {
    const url = `https://api.openweathermap.org/data/2.5/weather?q=${CITY}&units=metric&appid=${WEATHER_API_KEY}`;
    try {
        const response = await axios.get(url);
        // Simplify the response for the frontend
        const weatherData = {
            temperature: response.data.main.temp,
            condition: response.data.weather[0].description,
            city: response.data.name
        };
        res.json(weatherData);
    } catch (error) {
        // Log the error internally
        console.error('Weather API Error:', error.message);
        // Send a meaningful error to the client
        res.status(500).json({ error: "Could not fetch weather data from external service." });
    }
});